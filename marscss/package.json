{
  "name": "@marsbased/marscss",
  "version": "0.0.3",
  "description": "Front-end CSS framework",
  "main": "marscss.scss",
  "sass": "marscss.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarsBased/marscss.git"
  },
  "author": "MarsBased",
  "license": "MIT",
  "keywords": [
    "marscss",
    "marscss.scss",
    "css",
    "framework",
    "marsbased",
    "scss"
  ],
  "homepage": "https://marscss.com",
  "bugs": {
    "url": "https://github.com/MarsBased/marscss/issues"
  },
  "dependencies": {
    "bootstrap": "^4.0.0"
  },
  "devDependencies": {
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "postinstall": "rimraf ./scss/external && mkdirp ./scss/external && yarn copy:bootstrap",
    "copy:bootstrap": "ncp ./node_modules/bootstrap/scss/mixins/_grid.scss ./scss/external/_grid.scss; ncp ./node_modules/bootstrap/scss/mixins/_grid-framework.scss ./scss/external/_grid-framework.scss; ncp ./node_modules/bootstrap/scss/mixins/_breakpoints.scss ./scss/external/_breakpoints.scss",
    "build": "yarn copy:bootstrap && rimraf ./dist && mkdirp ./dist && ncp ./marscss.scss ./dist/marscss.scss && ncp ./scss/ ./dist/scss",
    "release-zip": "yarn build && zip -r9 marscss-$npm_package_version-dist.zip dist/"
  }
}
