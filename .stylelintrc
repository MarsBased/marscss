{
  "extends": [ "@marsbased/marstyle-stylelint" ],
  "rules": {
    "rule-empty-line-before": [
      "always-multi-line",
      except: ["after-single-line-comment", "first-nested"]
    ],
    "block-closing-brace-newline-after": [
      "always",
      "ignoreAtRules": ["if", "else"]
    ],
    "selector-max-id": 2,
    "string-no-newline": null,
    "selector-max-type": 3
  }
}
